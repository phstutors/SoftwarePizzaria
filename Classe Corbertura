package pacote;

public class Cobertura {


    // Atributos
    private String nome;
    private String sabor;
    private double quantidade;

    // Construtor
    public Cobertura(String nome, String sabor, double quantidade) {
        this.nome = nome;
        this.sabor = sabor;
        this.quantidade = quantidade;
    }

    // MÃ©todos
    public void exibirDetalhes() {
        System.out.println("Nome: " + nome);
        System.out.println("Sabor: " + sabor);
        System.out.println("Quantidade: " + quantidade + " gramas");
    }

    // Getters e Setters
    public String getNome() {
        return nome;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    public String getSabor() {
        return sabor;
    }

    public void setSabor(String sabor) {
        this.sabor = sabor;
    }

    public double getQuantidade() {
        return quantidade;
    }

    public void setQuantidade(double quantidade) {
        this.quantidade = quantidade;
    }

    public static void main(String[] args) {
        Cobertura cobertura1 = new Cobertura("Chocolate", "Amargo", 50.0);
        Cobertura cobertura2 = new Cobertura("Morango", "Doce", 30.0);

        System.out.println("Detalhes da Cobertura 1:");
        cobertura1.exibirDetalhes();

        System.out.println("\nDetalhes da Cobertura 2:");
        cobertura2.exibirDetalhes();
    }
}
